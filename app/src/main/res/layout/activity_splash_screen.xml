<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  tools:context="com.example.bookac.activities.SplashScreen"
  android:background="#86021a">

  <ImageView
    android:id="@+id/buk_icon"
    android:layout_centerInParent="true"
    android:src="@drawable/bukka_icon_new"
    android:layout_width="140dp"
    android:layout_height="140dp"/>

    <ImageView
      android:layout_marginTop="8dp"
      android:id="@+id/my_animation"
      android:layout_below="@id/buk_icon"
      android:background="@drawable/splash_anim"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</RelativeLayout>
