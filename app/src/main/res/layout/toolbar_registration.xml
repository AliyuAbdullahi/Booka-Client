<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:textColor="#fff"

   android:layout_height="170dp"
   android:background="#86021a"
   app:theme="@style/ToolBarThem"

   app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:layout_marginTop="20dp"
      android:src="@drawable/bukka_icon_new"
      android:gravity="center_vertical"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:text="Toolbar Title"
      android:layout_gravity="center_horizontal"
      android:id="@+id/toolbar_registration"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"/>
    <TextView
      android:textSize="22sp"
      android:textColor="#fff"
      android:gravity="center_horizontal"
      android:id="@+id/registration_text"
      android:text="Registration"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/toolbar_registration"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginTop="5dp"/>
    <TextView
      android:layout_marginTop="8dp"
      android:textColor="#fff"
      android:gravity="center_horizontal"
      android:text="complete your registration"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/registration_text"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>
  </RelativeLayout>

</android.support.v7.widget.Toolbar>