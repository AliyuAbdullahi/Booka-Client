<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:map="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <include layout="@layout/toolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/toolbarpeople"/>

  <fragment
    android:layout_below="@id/toolbarpeople"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="com.example.bookac.GetPeopleAround"
    android:name="com.google.android.gms.maps.SupportMapFragment"/>

  <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardview"
    android:elevation="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="#80ffffff"
    android:layout_height="60dp"
    android:layout_alignTop="@+id/map"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="60dp">
    <LinearLayout
      android:layout_gravity="center_vertical"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
        android:id="@+id/body"
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:textSize="16sp"
          android:id="@+id/location"
          android:layout_marginLeft="8dp"
          android:layout_gravity="center_vertical"
          android:background="#80ffffff"
          android:layout_weight="9"
          android:textColorHint="#ccc"
          android:hint="Location..."
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
      </LinearLayout>
    <ImageView
      android:layout_gravity="center_vertical"
      android:src="@drawable/delete"
      android:id="@+id/cancelImage"
      android:layout_weight="1"
      android:layout_width="25dp"
      android:layout_height="25dp"/>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <RelativeLayout
    android:id="@+id/go_now"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <ImageView
      android:id="@+id/enter_one"
      android:src="@drawable/gotocheflocation"
      android:layout_width="240dp"
      android:layout_height="80dp"
      android:contentDescription="myprogress"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>
    <ProgressBar
      android:id="@+id/progress"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:paddingBottom="15dp"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>
    <TextView
      android:singleLine="true"
      android:id="@+id/go_to_location"
      android:textStyle="bold"
      android:textColor="#fff"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="32dp"
      android:textSize="12sp"
      android:layout_marginRight="2dp"
      android:scrollHorizontally="true"
      android:text="Tap map to activate"
      android:layout_width="150dp"
      android:layout_height="wrap_content"/>

    <ImageView
      android:paddingTop="10dp"
      android:paddingBottom="16dp"
      android:paddingLeft="20dp"
      android:src="@drawable/pin"
      android:id="@+id/imageCenteInMap"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_below="@+id/go_to_location"
      android:layout_centerHorizontal="true"/>
  </RelativeLayout>
  <fragment
    android:id = "@+id/navigation_fragment"
    android:layout_gravity = "start"
    android:layout_width = "280dp"
    android:layout_height = "match_parent"
    android:name="com.example.bookac.fragments.NavigationFragment"
    tools:layout="@layout/fragment_navigation_drawer"
    />
</RelativeLayout>

